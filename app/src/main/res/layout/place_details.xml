<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/idAddress"
        android:text="Address:"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvAddressShow"
        android:hint="address"
        android:textStyle="bold"
        android:layout_width="190dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="52dp"
        android:layout_toEndOf="@+id/idAddress"/>
    <TextView
        android:id="@+id/idMobile"
        android:textStyle="bold"
        android:text="Mobile:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvMobileShow"
        android:layout_alignBottom="@+id/tvMobileShow"
        android:layout_toStartOf="@+id/tvAddressShow" />
    <TextView
        android:id="@+id/tvMobileShow"
        android:textStyle="bold"
        android:hint="mobile"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/imcall"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />
    <ImageView
        android:id="@+id/imcall"
        android:src="@mipmap/call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAddressShow"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="24dp" />
    <TextView
        android:id="@+id/idWeb"
        android:text="web"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvWebShow"
        android:layout_alignStart="@+id/idMobile" />
    <TextView
        android:id="@+id/tvWebShow"
        android:hint="web"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_below="@+id/imcall"
        android:layout_alignStart="@+id/tvMobileShow"
        android:layout_marginTop="13dp" />
    <ImageView
        android:id="@+id/imWeb"
        android:src="@mipmap/web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imcall"
        android:layout_alignStart="@+id/imcall" />
    <Button
        android:id="@+id/btClose"
        android:textStyle="bold"
        android:text="close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imWeb"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

</RelativeLayout>